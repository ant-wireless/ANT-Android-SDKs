<!DOCTYPE AndroidXML>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:paddingBottom="3dp"
	android:paddingTop="3dp"
	android:orientation="vertical" >
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="3dp" >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_marginBottom="5dp"
             android:textStyle="bold"
             android:text="Session" />

	</RelativeLayout>
    
    <RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:background="#D7D7D7"
	     android:paddingBottom="3dp"
	     android:paddingTop="3dp" >
	     
	    <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginBottom="5dp"
			android:text="Stamp:" />
	                
		<TextView
		    android:id="@+id/textView_Timestamp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:text="---" />
	
	</RelativeLayout>
	
    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#EBEBEB"
         android:paddingBottom="3dp"
         android:paddingTop="3dp" >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_marginBottom="5dp"
             android:text="Start Time:" />
         
         <TextView
             android:id="@+id/textView_StartTime"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:text="---" />

	</RelativeLayout>
	
    <RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:background="#D7D7D7"
	     android:paddingBottom="3dp"
	     android:paddingTop="3dp" >
	     
	    <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginBottom="5dp"
			android:text="Total Elapsed Time:" />
	                
		<TextView
		    android:id="@+id/textView_ElapsedTime"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:text="---" />
	
	</RelativeLayout>
	
    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#EBEBEB"
         android:paddingBottom="3dp"
         android:paddingTop="3dp" >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_marginBottom="5dp"
             android:text="Sport:" />
         
         <TextView
             android:id="@+id/textView_Sport"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:text="---" />

	</RelativeLayout>
	
    <RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:background="#D7D7D7"
	     android:paddingBottom="3dp"
	     android:paddingTop="3dp" >
	     
	    <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginBottom="5dp"
			android:text="Event:" />
	                
		<TextView
		    android:id="@+id/textView_Event"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:text="---" />
	
	</RelativeLayout>
	
    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#EBEBEB"
         android:paddingBottom="3dp"
         android:paddingTop="3dp" >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_marginBottom="5dp"
             android:text="Event Type:" />
         
         <TextView
             android:id="@+id/textView_EventType"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:text="---" />

	</RelativeLayout>
</LinearLayout>
<!DOCTYPE AndroidXML>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:paddingBottom="3dp"
	android:paddingTop="3dp"
	android:orientation="vertical" >
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="3dp" >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_marginBottom="5dp"
             android:textStyle="bold"
             android:text="Device Information" />

	</RelativeLayout>
    
    <RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:background="#D7D7D7"
	     android:paddingBottom="3dp"
	     android:paddingTop="3dp" >
	     
	    <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginBottom="5dp"
			android:text="Stamp:" />
	                
		<TextView
		    android:id="@+id/textView_Timestamp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:text="---" />
	
	</RelativeLayout>
	
    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#EBEBEB"
         android:paddingBottom="3dp"
         android:paddingTop="3dp" >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_marginBottom="5dp"
             android:text="Device Index:" />
         
         <TextView
             android:id="@+id/textView_DeviceIndex"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:text="---" />

	</RelativeLayout>
	
    <RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:background="#D7D7D7"
	     android:paddingBottom="3dp"
	     android:paddingTop="3dp" >
	     
	    <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginBottom="5dp"
			android:text="Device Type:" />
	                
		<TextView
		    android:id="@+id/textView_DeviceType"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:text="---" />
	
	</RelativeLayout>
	
    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#EBEBEB"
         android:paddingBottom="3dp"
         android:paddingTop="3dp" >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_marginBottom="5dp"
             android:text="Manufacturer:" />
         
         <TextView
             android:id="@+id/textView_Manufacturer"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:text="---" />

	</RelativeLayout>
	
    <RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:background="#D7D7D7"
	     android:paddingBottom="3dp"
	     android:paddingTop="3dp" >
	     
	    <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginBottom="5dp"
			android:text="Serial Number:" />
	                
		<TextView
		    android:id="@+id/textView_SerialNumber"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:text="---" />
	
	</RelativeLayout>
	
    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#EBEBEB"
         android:paddingBottom="3dp"
         android:paddingTop="3dp" >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_marginBottom="5dp"
             android:text="Product:" />
         
         <TextView
             android:id="@+id/textView_Product"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:text="---" />

	</RelativeLayout>
	
    <RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:background="#D7D7D7"
	     android:paddingBottom="3dp"
	     android:paddingTop="3dp" >
	     
	    <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginBottom="5dp"
			android:text="Software Version:" />
	                
		<TextView
		    android:id="@+id/textView_SoftwareVersion"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:text="---" />
	
	</RelativeLayout>
	
    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#EBEBEB"
         android:paddingBottom="3dp"
         android:paddingTop="3dp" >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_marginBottom="5dp"
             android:text="Hardware Version:" />
         
         <TextView
             android:id="@+id/textView_HardwareVersion"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:text="---" />

	</RelativeLayout>
	
    <RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:background="#D7D7D7"
	     android:paddingBottom="3dp"
	     android:paddingTop="3dp" >
	     
	    <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginBottom="5dp"
			android:text="Cumulative Operating Time:" />
	                
		<TextView
		    android:id="@+id/textView_CumulativeOperatingTime"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:text="---" />
	
	</RelativeLayout>
	
    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#EBEBEB"
         android:paddingBottom="3dp"
         android:paddingTop="3dp" >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_marginBottom="5dp"
             android:text="Battery Voltage:" />
         
         <TextView
             android:id="@+id/textView_BatteryVoltage"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:text="---" />

	</RelativeLayout>
	
    <RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:background="#D7D7D7"
	     android:paddingBottom="3dp"
	     android:paddingTop="3dp" >
	     
	    <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginBottom="5dp"
			android:text="BatteryStatus:" />
	                
		<TextView
		    android:id="@+id/textView_BatteryStatus"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:text="---" />
	
	</RelativeLayout>

</LinearLayout>